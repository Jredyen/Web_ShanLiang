    <script>
        $(document).ready(function () {
            // 在頁面載入時發起 AJAX 請求獲取購物車數量並更新顯示
            $.ajax({
                url: "/api/shoppingcart/showcartcount",
                type: "POST",
                success: function (data) {
                    if (data.success) {
                        $('.cartQuantity').text(data.cartCount); // 更新顯示購物車數量的元素
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    alert("無法獲取購物車數量");
                }
            });
            
        });

        const loginText = document.getElementById('isLogin');
        $(document).ready(function () {
            // 在頁面載入時發起 AJAX 請求獲取使用者名稱並更新顯示
            $.ajax({
                url: "/api/userName/User",
                type: "POST",
                success: function (data) {
                    if (data.success) {
                        var userName = data.userName;
                        var greeting = "您好，";
                        if (userName !== '請先登入') {
                            var logoutLink = '<a href="/User/logOut" >登出</a>';
                            $('.showUserName').html(greeting + userName + logoutLink  );
                        }
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    // 處理錯誤
                }
            });
        });

        
    </script>
